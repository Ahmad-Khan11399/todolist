<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>
  <div class="box">
    <% newListItems.forEach((newItem)=>{ %>
      <form action="/delete" method="post">
      <div class="item">
        <input type="checkbox" name="deleteItem" value="<%=newItem._id%>" onchange="this.form.submit()">
        <input type="hidden" name="listName" value="<%= listTitle%>">
        <p><%=  newItem.itemName  %></p>
      </div>
    </form>
      <% }) %>

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" value="<%= listTitle %>" name="list">+</button>
      </form>
  </div>

<%- include("footer") -%>
